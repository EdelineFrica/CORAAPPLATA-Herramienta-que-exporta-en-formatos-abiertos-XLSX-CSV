@model IEnumerable<AppDatosAbiertos.RecursoProdAgua>

@{
    ViewBag.Title = "Index";
}

<center>
    <h2>Producción de Agua</h2>
</center>
<p>
    <a class="btn btn-primary" style="margin-bottom:10px" href="/RecursoProdAgua/Create">
        <span class='glyphicon glyphicon-file'></span>
    </a>
</p>


<p>
    <a class="btn btn-default" style="margin-bottom:10px" href="/RecursoProdAgua/ExportarCSV">Exportar a CSV
        <span class='glyphicon glyphicon-export'></span>
    </a>
</p>


<p>
    <a class="btn btn-default" style="margin-bottom:10px" href="/RecursoProdAgua/ExportarAxlsx">
        Exportar a XLSX
        <span class='glyphicon glyphicon-export'></span>
    </a>
</p>


<center>
    <table class="table-bordered">
        <tr>
            <th>
                NOMBRE DEL CONJUNTO
            </th>

            <th>
                AÑO
            </th>

            <th>
                MES
            </th>

            <th>
                GALONES POR MES
            </th>
            <th>
                METRO CUBICO POR MES
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ConjuntodeDato.NombreConjunto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Anio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mts3Mes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GalonesxMes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Mes.NombreMes)
                </td>
                <td>


                    @Html.Raw("<a data-modal='' href='/RecursoProdAgua/Edit/" + item.IdRecursoPAgua + "' id='" + item.IdRecursoPAgua + "'title='Edit'> <span class='glyphicon glyphicon-edit'></span> </a>")
                    @Html.Raw("<a data-modal='' href='/RecursoProdAgua/Details/" + item.IdRecursoPAgua + "' id='" + item.IdRecursoPAgua + "'title='Details'> <span class='glyphicon glyphicon-th-list'></span> </a>")
                    @Html.Raw("<a data-modal='' href='/RecursoProdAgua/Delete/" + item.IdRecursoPAgua + "' id='" + item.IdRecursoPAgua + "'title='Delete'> <span class='glyphicon glyphicon-trash'></span> </a>")

                </td>
            </tr>
        }

    </table>
</center>